extends _layout/layout

//- Các giá trị mặc định cho trang web
block variables
	- var title = 'Home'
	- var description = 'Description for home page'
	- var bodyclass = 'home'

//- Khai báo các mixin
mixin services(Content, UrlImg, index)
		div(class=`col-9 col-sm-12 col-md-6 col-lg-4 text-center home-services-item home-services-item-${index + 1}`)
			figure
				img(src=`${UrlImg}`, alt= Content)
			div
				p= Content
				.home-services-decription It is a long established fact that a reader will be distracted by the readable content

//- Phần khai báo body
block body
	//- Bạn viết code vào đây nhớ là phải mở đầu bằng section ở mỗi khối
	section.home-slider.home-slider-background
		.container
			.row.justify-content-center
				.col-md-12
					.owl-carousel.owl-theme
						figure.item
							img(src="./img/invention.png")
							figcaption
						figure.item
							img(src="./img/invention.png", alt="")
							figcaption
						figure.item
							img(src="./img/invention.png", alt="")
							figcaption
	section.home-news.home-about-us-background
		.container
			.row.justify-content-center
				.col-12#content-height
					.home-about-us
						h3.home-about-us-title Về chúng tôi
						div
							img(src="./img/flower-line.png", alt="" class="home-about-us-img-title")
					.row.home-about-us-img
						.col-10.col-sm-6.col-md-6.col-lg-4.home-about-us-responsive.home-about-us-responsive-left#content-1
							figure(attr-name="Trâm Anh")
								img(src="./img/about-us-woman.png", alt="" class="home-about-us-img-item home-about-us-img-1")
						.col-12.col-sm-12.col-md-6.home-about-us-responsive-middle
							figure
								img(src="./img/about-us.png", alt="" class="home-about-us-img-2")
						.col-10.col-sm-6.col-md-6.col-lg-4.home-about-us-responsive.home-about-us-responsive-right#content-2
							figure(attr-name="Pew Pew")
								img(src="./img/about-us-man.png", alt="" class="home-about-us-img-item home-about-us-img-3")
					.row.home-us-total#home-us-total-id
						.col-10.col-sm-5.col-md-5.col-lg-4.home-about-us-content.home-about-us-content-left#content-info-1
								div
									i.fa.fa-star-o
									p Hot girl Trâm Anh
								div
									i.fa.fa-star-o
									p 27/04/1995
								div
									i.fa.fa-star-o
									p Make-up chuyên nghiệp.
								div
									i.fa.fa-star-o
									p 5 năm kinh nghiệm.
								div
									i.fa.fa-star-o
									p Làm việc studio lớn ở HCM
						.col-sm-1.col-md-1.col-lg-4
						.col-10.col-sm-5.col-md-5.col-lg-4.home-about-us-content.home-about-us-content-right#content-info-2
								div
									i.fa.fa-star-o
									p Trần Đăng Khoa
								div
									i.fa.fa-star-o
									p 25/05/1991
								div
									i.fa.fa-star-o
									p Nhà tạo mẫu tóc.
								div
									i.fa.fa-star-o
									p 10 năm kinh nghiệm.
								div
									i.fa.fa-star-o
									p Từng tác nghiệp ở Úc, Nhật.
	section.home-clients.home-services-background
		.container
			.row.justify-content-center
				.col-12
					.home-services-title
						h3.home-about-us-title Dịch vụ
						div
							img(src="./img/flower-line.png", alt="" class="home-about-us-img-title")
					- const arrServices = ['Áo cưới', 'Trang điểm', 'Tạo mẫu tóc', 'Chụp ảnh', 'Sửa ảnh', 'Dịch vụ khác']
					- const arrUrl = ['./img/bride-dress.png', './img/make-up.png', './img/cut-hair.png', './img/camera.png', './img/cover-image.png', './img/wedding-rings.png']	
					.row.home-services-option
						each value, index in arrServices
							+services(value, arrUrl[index], index)