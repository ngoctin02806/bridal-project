						.col-10.col-sm-5.col-md-5.col-lg-4.home-about-us-content.home-about-us-content-left#content-info-1
								div
									i.fa.fa-star-o
									p Hot girl Trâm Anh
								div
									i.fa.fa-star-o
									p 27/04/1995
								div
									i.fa.fa-star-o
									p Make-up chuyên nghiệp.
								div
									i.fa.fa-star-o
									p 5 năm kinh nghiệm.
								div
									i.fa.fa-star-o
									p Làm việc studio lớn ở HCM
						.col-sm-1.col-md-1.col-lg-4
						.col-10.col-sm-5.col-md-5.col-lg-4.home-about-us-content.home-about-us-content-right#content-info-2
								div
									i.fa.fa-star-o
									p Trần Đăng Khoa
								div
									i.fa.fa-star-o
									p 25/05/1991
								div
									i.fa.fa-star-o
									p Nhà tạo mẫu tóc.
								div
