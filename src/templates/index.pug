extends _layout/layout

//- Các giá trị mặc định cho trang web
block variables
	- var title = 'Home'
	- var description = 'Description for home page'
	- var bodyclass = 'home'

//- Khai báo các mixin
mixin services(Content, UrlImg, index)
		div(class=`col-9 col-sm-12 col-md-6 col-lg-4 text-center home-services-item home-services-item-${index + 1}`)
			figure
				img(src=`${UrlImg}`, alt= Content)
			div
				p= Content
				.home-services-decription It is a long established fact that a reader will be distracted by the readable content

mixin demoWeddingDress(jsonList)
	each value in jsonList
		.col-5.col-sm-6.col-md-4.col-lg-2.home-demo-dress-item-img
			figure
				img(src=`${value}`, alt='bride')

//- Phần khai báo body
block body
	//- Bạn viết code vào đây nhớ là phải mở đầu bằng section ở mỗi khối
	section.home-slider.home-slider-background
		.container
			.row.justify-content-center
				.col-md-12
					.owl-carousel.owl-theme
						figure.item
							img(src="./img/invention.png")
							figcaption
						figure.item
							img(src="./img/invention.png", alt="")
							figcaption
						figure.item
							img(src="./img/invention.png", alt="")
							figcaption
	section.home-news.home-about-us-background
		.container
			.row.justify-content-center
				.col-12#content-height
					.home-about-us
						h3.home-about-us-title Về chúng tôi
						div
							img(src="./img/flower-line.png", alt="" class="home-about-us-img-title")
					.row.home-about-us-img
						.col-10.col-sm-6.col-md-6.col-lg-4.home-about-us-responsive.home-about-us-responsive-left#content-1
							figure(attr-name="Trâm Anh")
								img(src="./img/about-us-woman.png", alt="" class="home-about-us-img-item home-about-us-img-1")
						.col-12.col-sm-12.col-md-6.home-about-us-responsive-middle
							figure
								img(src="./img/about-us.png", alt="" class="home-about-us-img-2")
						.col-10.col-sm-6.col-md-6.col-lg-4.home-about-us-responsive.home-about-us-responsive-right#content-2
							figure(attr-name="Pew Pew")
								img(src="./img/about-us-man.png", alt="" class="home-about-us-img-item home-about-us-img-3")
